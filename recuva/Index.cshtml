@{
    ViewData["Title"] = "Formulario de Inserción de Datos (Para Personas y Usuarios)";
}

<head>
    <meta charset="UTF-8">
    <title>Formulario de Inserción de Datos (Para Personas y Usuarios)</title>

</head>

<body>
    <div>
<h1>Formulario de Personas</h1>
<form id="personaForm">
    <label for="nombres">Nombres:</label>
    <input type="text" id="nombres" name="nombres" required><br><br>

    <label for="apellidos">Apellidos:</label>
    <input type="text" id="apellidos" name="apellidos" required><br><br>

    <label for="numIdentificacion">Número de Identificación:</label>
    <input type="text" id="numIdentificacion" name="numIdentificacion" required><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br><br>

    <label for="tipoIdentificacion">Tipo de Identificación:</label>
    <input type="text" id="tipoIdentificacion" name="tipoIdentificacion" required><br><br>

    <label for="nombresApellidos">Nombres y Apellidos:</label>
    <input type="text" id="nombresApellidos" name="nombresApellidos" required><br><br>

    <button type="button" onclick="agregarPersona()">Agregar Persona</button>
</form>
    </div>

    <div>

<h1>Formulario de Usuarios</h1>
<form id="usuarioForm">
    <label for="Username">Usuario:</label>
    <input type="text" id="Username" name="Username" required><br><br>

    <label for="Password">Contraseña:</label>
    <input type="text" id="Password" name="Password" required><br><br>

    <button type="button" onclick="agregarUsuario()">Agregar Usuario</button>
</form>
    </div>

<script>
    function agregarPersona() {
        var nombres = document.getElementById("nombres").value;
        var apellidos = document.getElementById("apellidos").value;
        var numIdentificacion = document.getElementById("numIdentificacion").value;
        var email = document.getElementById("email").value;
        var tipoIdentificacion = document.getElementById("tipoIdentificacion").value;
        var nombresApellidos = document.getElementById("nombresApellidos").value;

        var url = "http://localhost:5279/api/Personas?" +
            "nombres=" + encodeURIComponent(nombres) +
            "&apellidos=" + encodeURIComponent(apellidos) +
            "&numIdentificacion=" + encodeURIComponent(numIdentificacion) +
            "&email=" + encodeURIComponent(email) +
            "&tipoIdentificacion=" + encodeURIComponent(tipoIdentificacion) +
            "&nombresApellidos=" + encodeURIComponent(nombresApellidos);

        var xhr = new XMLHttpRequest();
        xhr.open("POST", url, true);
        xhr.onload = function () {
            if (xhr.status === 200) {
                alert("Persona agregada correctamente");

            } else {
                alert("Error al agregar persona");

            }
        };
        xhr.send();
    }

    function agregarUsuario() {
        var Username = document.getElementById("Username").value;
        var Password = document.getElementById("Password").value;

        var url = "http://localhost:5279/api/Usuarios?" +
            "Username=" + encodeURIComponent(Username) +
            "&Password=" + encodeURIComponent(Password);

        var xhr = new XMLHttpRequest();
        xhr.open("POST", url, true);
        xhr.onload = function () {
            if (xhr.status === 200) {
                alert("Usuario agregado correctamente");
            } else {
                alert("Error al agregar usuario");
            }
        };
        xhr.send();
    }
</script>
</body>





